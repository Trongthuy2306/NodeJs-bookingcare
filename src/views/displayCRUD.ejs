<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
    <title>Display CRUD</title>
</head>

<body>
    <a href="/crud" class="btn btn-primary">Add</a>

    <table style="width: 100%;">
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Action</th>

        </tr>
        <tr>
            <% for(var i=0; i < dataTable.length; i++) { %>
        <tr>
            <td>
                <%= dataTable[i].email %>
            </td>
            <td>
                <%= dataTable[i].firstName %>
            </td>
            <td>
                <%= dataTable[i].lastName %>
            </td>
            <td>
                <%= dataTable[i].address %>
            </td>
            <td>
                <a href="/edit-crud?id=<%=dataTable[i].id%>" class="btn btn-primary">Edit</a>
                <a href="/delete-crud?id=<%=dataTable[i].id%>" class="btn btn-danger">Delete</a>

            </td>
        </tr>
        <% } %>
            </tr>
    </table>
</body>

</html>